<%= form_with model: @task do |f| %>
    <h2>
        <%= f.label :title %>: 
        <%= f.text_area :title %> 

        <br>

        <%= f.label :deadline %>
        <%= f.datetime_field :deadline, min: Time.current.strftime("%Y-%m-%dT%H:%M") %>
        <br>

        <%= f.label :priority %>
        <%= f.select :priority, [["High", "high"], ["Medium", "medium"], ["Low", "low"]], { prompt: "Select Priority" } %>

        <br>

        <%= f.submit %>
    </h2>
<% end %>
